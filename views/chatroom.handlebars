<div class ="container-fluid" >
    <div class = "row">
        <div id="header" class ="col-sm-12">
            <h2>U of W Chat</h2>
        </div>
            <div id="boxnav" class="col-2">
                {{>navigation}}
            </div>
            <div id="box" class="col-10 ">
                <h2>Chatroom</h2>
                {{#if alert}}
                  {{alert}}
                {{/if}}
                {{#each chatters}}
                <div id="cbox" class="flex-row">
                    <p>
                    <p><strong>{{this.name}}</strong></p> 
                    <p>{{this.message}}</p>
                    <p id="date">{{this.date}}</p>
                    <p><input type="button" class="btn btn-danger" value="delete" id="adminChatDelete" data-id="{{this.id}}" />
                    </p>
                </div>
                {{/each}}
                       
            <div class="col-10">
                <form id="message" action="/chatbox" name ="chat" method="POST">
    	        <textarea class="form-control" name="message" placeholder="type a message" maxlength="140"></textarea>
		        <hr>
                <button class="btn btn-primary" type="submit">Send</button>
                </form> 
            </div>
        </div>
    </div>
</div>


