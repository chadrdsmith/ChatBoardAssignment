<div class ="container-fluid" >
    <div class = "row">
        <div id="header" class ="col-sm-12">
            <h4>SimpleChat</h4>
        </div>
        <div id="box" class="col-2">
            {{>navigation}}
        </div>
        <div id="box" class="col-10">
            
            
            
            
            <h4>User posts</h4>

        <div id="chatbox">
               
                    {{!-- {{message}} --}}
               
                    {{#each chatters}}
                        <div id="cbox">
                        <p>{{this.message}}<br>{{this.date}}</p>
                        
                        <form action = "/delete" method="POST">
                        <input type ="submit" value="delete" id="btnPost" class="btn btn-danger" >
                        <input type="hidden" name="id" value="{{this.id}}>
                        </form>
                        </div>
                    {{/each}}
        </div>
        </div>
    </div>
    
</div>

